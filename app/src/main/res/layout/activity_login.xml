<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_0a2343"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
     <ImageView
         android:src="@drawable/bg_login"
         android:id="@+id/act_login_sdv"
         android:layout_width="match_parent"
         android:layout_height="@dimen/height_240" />
   <TextView
       android:layout_marginTop="@dimen/space_10"
      style="@style/txt_fe_18"
       android:id="@+id/act_login_tv_title"
       android:text="@string/dl"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true" />

    <EditText
        android:drawablePadding="@dimen/space_5"
        android:drawableLeft="@drawable/icon_account"
        android:textColor="@color/color_edittext"
        android:paddingLeft="@dimen/space_10"
        android:hint="请输入账号"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/color_939699"
       style="@style/sel_edittext"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_below="@id/act_login_sdv"
        android:id="@+id/act_login_et_phone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44" />
    <EditText android:drawablePadding="@dimen/space_5"

        android:drawableLeft="@drawable/icon_password"
        android:inputType="textPassword"
        android:textColor="@color/color_edittext"
        android:paddingLeft="@dimen/space_10"
        android:hint="请输入密码"
        android:textSize="@dimen/font_size_14"
        android:textColorHint="@color/color_939699"
        style="@style/sel_edittext"
        android:background="@drawable/sel_edittext"
        android:layout_marginTop="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_below="@id/act_login_et_phone"
        android:id="@+id/act_login_et_pwd"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44" />

    <CheckBox

        android:button="@drawable/sel_cb_remember"
        android:layout_marginLeft="@dimen/space_10"
        android:textColor="@color/color_939699"
        android:layout_marginTop="@dimen/space_15"
        android:layout_below="@id/act_login_et_pwd"
        android:id="@+id/act_login_cb_remember"
        android:text=" 记住密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:background="@drawable/shape_button_blue"
        style="@style/txt_0a2343_18"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_10"
        android:text="@string/dl_space"
        android:layout_below="@id/act_login_cb_remember"
        android:id="@+id/act_login_btn_login"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44" />
</RelativeLayout>
