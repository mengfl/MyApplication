<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0a2343"
    android:orientation="vertical"
    >
   <include

       layout="@layout/layout_backtitle"/>
    <com.example.administrator.myapplication.common.stepView.StepView
        android:paddingBottom="@dimen/space_10"
        android:background="@color/color_193856"
        android:id="@+id/act_preparetest_stepview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <com.example.administrator.myapplication.wigdet.CarAttriView
        android:id="@+id/act_preparetest_carattriview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:padding="@dimen/space_10"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginRight="@dimen/space_25"
        android:layout_marginLeft="@dimen/space_25"
        android:background="@drawable/shape_button_white"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
         <TextView
             android:id="@+id/act_preparetest_tv_title"
             style="@style/txt_a2faff_16"
             android:text="1、综合极端-登入登入"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/act_preparetest_tv_content"
            android:lineSpacingExtra="2dp"
            android:layout_marginTop="@dimen/space_5"
            style="@style/txt_a2faff_14"
            android:text="杀了肯定加速离开达拉斯多拉速度婕拉时间段拉屎觉得拉数据家里达拉斯觉得拉数据多拉看似简单拉升阶段拉克丝的按时啊达拉斯多拉时间打了卡就是啊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/act_preparetest_tv_time"
            android:layout_marginTop="@dimen/space_5"
            style="@style/txt_fe_12"
            android:gravity="right"
            android:text="01:00"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:id="@+id/act_preparetest_img_pic"
        android:layout_marginTop="@dimen/space_25"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/icon_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
