<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0a2343"
    >
   <include
       layout="@layout/layout_backtitle"/>
    <RelativeLayout
        android:background="@color/color_193856"
        android:layout_width="match_parent"
        android:layout_height="250dp">
      <ImageView
          android:id="@+id/act_person_img"
          android:layout_centerInParent="true"
          android:src="@drawable/icon_user"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/act_person_tv_name"
            style="@style/txt_a2faff_16"
            android:layout_marginTop="@dimen/space_15"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/act_person_img"
            android:text="用户名"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <View
        android:layout_marginTop="@dimen/space_10"
        android:background="@color/color_475567"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1px" />
     <TextView
         android:id="@+id/act_person_tv_record"
         android:drawablePadding="@dimen/space_10"
        android:padding="@dimen/space_10"
         android:drawableLeft="@drawable/icon_record"
         android:drawableRight="@drawable/icon_arrow_right"
         style="@style/txt_a2faff_14"
         android:text="测试记录"
         android:layout_width="match_parent"
         android:layout_height="wrap_content" />
    <View

        android:background="@color/color_475567"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1px" />
    <TextView
        android:id="@+id/act_person_tv_about"
        android:drawablePadding="@dimen/space_10"
        android:padding="@dimen/space_10"
        android:drawableLeft="@drawable/icon_about"
        android:drawableRight="@drawable/icon_arrow_right"
        style="@style/txt_a2faff_14"
        android:text="关于"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View

        android:background="@color/color_475567"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_1px" />

    <Button
        android:background="@drawable/shape_button_blue"
        style="@style/txt_0a2343_18"
        android:layout_marginRight="@dimen/space_10"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginTop="@dimen/space_40"
        android:text="@string/tcdl"
        android:id="@+id/act_person_btn_exit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/height_44" />
</LinearLayout>
