<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0a2343"
    android:orientation="vertical">

    <include

        layout="@layout/layout_backtitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <com.example.administrator.myapplication.wigdet.CarScanView
                android:layout_width="match_parent"
                android:layout_height="152dp" />

            <TextView
                android:id="@+id/act_choosecar_tv_choosetype"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_15"
                android:background="@drawable/shape_et_gray"
                android:drawableRight="@drawable/icon_arrow_right"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_20"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_20"
                android:text="选择该时间段已预约的车辆型号"
                android:textColor="@color/color_a2f1ff"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/act_choosecar_tv_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_25"
                android:background="@drawable/shape_et_gray"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:text="预约日期      "
                android:textColor="@color/color_a2f1ff"
                android:textSize="@dimen/font_size_14" />

            <TextView

                android:id="@+id/act_choosecar_tv_notinum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/shape_et_gray"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:text="车辆型号      "
                android:textColor="@color/color_a2f1ff"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:id="@+id/act_choosecar_tv_vin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/shape_et_gray"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:text=" 车辆VIN      "
                android:textColor="@color/color_a2f1ff"
                android:textSize="@dimen/font_size_14" />

            <TextView
                android:visibility="gone"
                android:id="@+id/act_choosecar_tv_licensenum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_10"
                android:background="@drawable/shape_et_gray"
                android:gravity="center_vertical"
                android:paddingBottom="@dimen/space_10"
                android:paddingLeft="@dimen/space_10"
                android:paddingRight="@dimen/space_10"
                android:paddingTop="@dimen/space_10"
                android:text="   车牌号      "
                android:textColor="@color/color_a2f1ff"
                android:textSize="@dimen/font_size_14" />


            <Button
                android:id="@+id/act_choosecar_btn_ok"
                style="@style/txt_0a2343_18"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_44"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginTop="@dimen/space_25"
                android:background="@drawable/shape_button_blue"
                android:text="@string/qd_space" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>